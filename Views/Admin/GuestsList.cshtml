@{
    ViewData["Title"] = "Guests";
}

@{
    @model List<FilmManager.Models.Account.FilmManagerUser>
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <h4 class="text-danger">There are no guests in the database</h4>
        }
        else
        {
            @foreach (var user in Model)
            {
                <tr>
                    <th scope="row">@(Model.IndexOf(user) + 1)</th>
                    <td>@user.Email</td>
                    <td>
                        <a class="btn btn-primary"
                           asp-controller="Admin"
                           asp-action="MakeAdmin"
                           asp-route-username="@user.UserName">Make Admin</a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
