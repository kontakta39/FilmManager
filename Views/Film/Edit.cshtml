@{
    @model FilmManager.Models.Film.Film
}

@{
    ViewData["Title"] = "Edit";
}

<div>
    <h4>Edit the current genre</h4>
    <form method="post" asp-controller="Film" asp-action="Edit" asp-route-filmId="@(Model?.FilmId ?? 0)">
        <div asp-validation-summary="All" class="text-danger"></div>
        <p class="text-success">@ViewData["Success"]</p>
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" type="text" class="form-control" placeholder="">
            <label asp-for="Genre">Genre</label>
            <input asp-for="Genre" type="text" class="form-control" placeholder="">
            <label asp-for="Director">Director</label>
            <input asp-for="Director" type="text" class="form-control" placeholder="">
            <label asp-for="Music">Music</label>
            <input asp-for="Music" type="text" class="form-control" placeholder="">
            <label asp-for="Distributor">Distributor</label>
            <input asp-for="Distributor" type="text" class="form-control" placeholder="">
            <label asp-for="ReleaseYear">Release Year</label>
            <input asp-for="ReleaseYear" type="number" class="form-control" placeholder="">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
