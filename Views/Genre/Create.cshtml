@{
    @model FilmManager.Models.Genre.Genre
}

@{
    ViewData["Title"] = "Create";
}

<div>
    <h4>Create new genre</h4>
    <form method="post" asp-controller="Genre" asp-action="Create" asp-route-genreId="">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="GenreName">Name</label>
            <input asp-for="GenreName" type="text" class="form-control" placeholder="">
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>
